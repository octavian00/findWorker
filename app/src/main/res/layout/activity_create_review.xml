<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile.user.ui.notifications.CreateReview">
    <EditText
        android:id="@+id/edt_shortDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="short description about the problem"/>
    <EditText
        android:id="@+id/edt_user_review"
        android:hint="share with us your feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:numStars="5"
        android:rating="3"
        android:stepSize="0.5"
        android:isIndicator="false"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_submit_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>

</LinearLayout>